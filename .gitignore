# Ignore everything
*

# But not these files...
!.gitignore
!*.ts
!*.tsx
!*.js
!*.jsx
!*.json
!*.css
!*.md
!*.html
!*.svg
!*.png
!*.jpg
!*.jpeg
!*.ico
!*.webp

# Allow specific directories
!app/
!components/
!lib/
!public/
!scripts/
!styles/
!hooks/

# ...even if they are in subdirectories
!*/

# But still ignore node_modules and build directories
node_modules/
.next/
out/
build/
dist/

# Debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# Environment files
.env*

# Vercel
.vercel

# TypeScript
*.tsbuildinfo
next-env.d.ts